@model Entities.tblServicio

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Servicio</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card">
            <div class="row justify-content-md-center">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("Id de Servicios", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Editor("Id de Servicios", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idservicios, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("id de Area", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.idArea, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idArea, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.Label("Nombre del Servicio", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.serviciosNombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.serviciosNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    </div>
              
                </div> <br /> <br />
            <div class="row justify-content-md-center">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar Servicio" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div>@Html.ActionLink("Regresar a la Lista", "Index")</div>
                        </div>
                        </div>
                    </div>
                </div>
                    </div>
                </div>
                }



                <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                <script src="~/Scripts/jquery.validate.min.js"></script>
                <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
