
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<div>

    @Html.Hidden("idColaborador")

    <div class="row">
        <div class="col-md-6">
            <div>
                <div class="form-group">
                    @Html.Label("Colaborador")
                    @ViewBag.NombreColaborador
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div>
                <div class="form-group">
                    @Html.Label("Inicial")
                    @ViewBag.HoraInicial
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div>
                <div class="form-group">
                    @Html.Label("Final")
                    @ViewBag.HoraFinal
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div>
                <div class="form-group">
                    @Html.Label("Dias", htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.DropDownList("idDias", null, "Seleccione", new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button id="btnPulsar">Guardar</button>
</div>

