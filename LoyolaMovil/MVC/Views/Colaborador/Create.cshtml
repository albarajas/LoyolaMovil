            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="Catalogos" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catalogos</a>
                <div class="dropdown-menu">
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Colaboradores">@Html.ActionLink("Colaborador", "Index", "Colaborador", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Aulas"> @Html.ActionLink("Aulas", "Index", "Aulas", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Edificios">@Html.ActionLink("Edificios", "Index", "Edificio", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="TipoAula">@Html.ActionLink("Tipo Aula", "Index", "TipoAula", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Area">@Html.ActionLink("Área", "Index", "Area", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Area">@Html.ActionLink("Nivel", "Index", "Nivel", new { area = "" }, new { @class = "dropdown-item" })</a>
                </div>
            </li>
        </ul>

        <ul class="nav justify-content-end">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="Usuario" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Mi cuenta</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Editar Cuenta</a>
                    <div class="dropdown-divider"></div> <a class="dropdown-item">@Html.ActionLink("Cerrar Cuenta", "Bienvenida", "Home", new { area = "" }, new { @class = "dropdown-item" }) </a>
                </div>
            </li>
        </ul>

    </div>
</nav><br>
<h2>Crear Colaborador</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("idColaborador")
        <div class="card">
            <div class="row justify-content-md-center">
                 <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Nombre Colaborador", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.nombreColaborador, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombreColaborador, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Telefono", htmlAttributes: new { @class = "control-label" }) 
                        @Html.EditorFor(model => model.telefonoColaborador, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.telefonoColaborador, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Email", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.correoColaborador, new { htmlAttributes = new { @class = "form-control" } })
                       @Html.ValidationMessageFor(model => model.correoColaborador, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label" })
                        @Html.PasswordFor(model => model.contraseniaColaborador, new { htmlAttributes = new { @class = "OnlinePassword" } })
                        @Html.ValidationMessageFor(model => model.contraseniaColaborador, "", new { @class = "text-danger" })
                    </div>
                </div> 
            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Horario de Entrada", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.horarioInicio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.horarioInicio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Horario de Salida", htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.horaFin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.horaFin, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Crear" class="btn btn-default" />
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div>  @Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn btn-sm btn-info" }) </div>
                        </div>
                    </div>
                  </div>
             </div>
        </div>

}


<div class="footer "></div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script text="text/javascript">
  //codigo que controla todo......
    var Colaborador = $('#idColaborador').val(0);

    $.datetimepicker.setLocale('es');
    $('#horarioInicio').datetimepicker({
        yearOffset: 0,
        datepicker: false,
        timepicker: true,
        timeFormat: 'h:mm:s p',
    });

    $.datetimepicker.setLocale('es');
    $('#horaFin').datetimepicker({
        yearOffset: 0,
        datepicker: false,
        timepicker: true,
        timeFormat: 'h:mm:s p',
    });

</script>
