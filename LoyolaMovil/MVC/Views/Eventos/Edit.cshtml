@model Entities.tblEvento

@{
    ViewBag.Title = "Edit";
}



<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Evento.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/scripts/jquery.datetimepicker.full.min.js"></script>
<link href="~/Content/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<div class="jumbotron"></div>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a id="Inicio">@Html.ActionLink("Inicio", "Index", "Principal", new { area = "" }, new { @class = "nav-link active" })</a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="Catalogos" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catalogos</a>
                <div class="dropdown-menu">
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Colaboradores">@Html.ActionLink("Colaborador", "Index", "Colaborador", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Aulas"> @Html.ActionLink("Aulas", "Index", "Aulas", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Edificios">@Html.ActionLink("Edificios", "Index", "Edificio", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="TipoAula">@Html.ActionLink("Tipo Aula", "Index", "TipoAula", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Area">@Html.ActionLink("Área", "Index", "Area", new { area = "" }, new { @class = "dropdown-item" })</a>
                    <a role="button" aria-haspopup="true" aria-expanded="false" id="Area">@Html.ActionLink("Nivel", "Index", "Nivel", new { area = "" }, new { @class = "dropdown-item" })</a>
                 </div>
            </li>
        </ul>

        <ul class="nav justify-content-end">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="Usuario" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Mi cuenta</a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Editar Cuenta</a>
                    <div class="dropdown-divider"></div> <a class="dropdown-item">@Html.ActionLink("Cerrar Cuenta", "Bienvenida", "Home", new { area = "" }, new { @class = "dropdown-item" }) </a>
                </div>
            </li>
        </ul>

    </div>
</nav><br>
<h3 class="text-info">Editar Evento</h3>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("idEvento")
        <div class="card">
            <div class="row justify-content-md-center">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("Aula ", htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-10">
                            @Html.DropDownList("idAula", null, "Seleccione", new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.idAula, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.Label("Colaborador", htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-10">
                            @Html.DropDownList("idColaborador", null, "Seleccione", new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.idColaborador, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.Label("Nivel", htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.idNivel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idNivel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-md-center">
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.Label("Nombre del Evento:", htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.nombreEvento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombreEvento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        @Html.Label("Fecha del Evento", htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.fechaEvento, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fechaEvento, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.Label("Hora de Inicio", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.horaInicio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.horaInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        @Html.Label("hora de Fin", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.horaFinal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.horaFinal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="form-group">
                        @Html.Label("Descripción del Evento:", htmlAttributes: new { @class = "control-label " })
                        @Html.TextArea("descripcionEvento", null, new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.descripcionEvento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div>@Html.ActionLink("Regresar a la Lista", "Index", null, new { @class = "btn btn-sm btn-info" })</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }


    <div class="footer "></div>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@*hora y fecha*@

<script text="text/javascript">
  //codigo que controla todo......
    var Evento = $('#idEvento').val(0);

    $('#horaInicio').timepicker();
    $('#horaFinal').timepicker();
    $('#fechaEvento').datepicker();

</script>
